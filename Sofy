  <script>
    function crearCorazon() {
      const corazon = document.createElement("div");
      corazon.className = "heart";
      corazon.style.left = Math.random() * 100 + "vw";
      corazon.style.fontSize = (14 + Math.random() * 16) + "px";

      const corazones = ["‚ù§Ô∏è", "üíñ", "üíï", "üíó", "üíû"];
      corazon.innerHTML = corazones[Math.floor(Math.random() * corazones.length)];

      document.body.appendChild(corazon);

      setTimeout(() => {
        corazon.remove();
      }, 8000);
    }

    function continuar() {
      document.getElementById("mensaje").innerHTML =
        "No podemos estar juntos el 14,<br><br>" +
        "pero quiero toda una vida<br>" +
        "contigo üíñ";

      // Explosi√≥n de corazones üíò
      for (let i = 0; i < 20; i++) {
        setTimeout(crearCorazon, i * 150);
      }
    }
  </script>

